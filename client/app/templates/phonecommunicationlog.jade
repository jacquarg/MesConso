.col-md-3.pcl
    - var dt = new Date(pcl.timestamp)
    .time= dt.getHours()
        | :
        = dt.getMinutes()
    div
        - if (pcl.longitude)
                a(href="http://www.openstreetmap.org/?mlat=#{pcl.latitude}&mlon=#{pcl.longitude}#map=17/#{pcl.latitude}/#{pcl.longitude}", target="_blank")
                    img(src="img/Geoloc.png")

        img(src="img/#{pcl.type}.png")
        img(src="img/#{pcl.direction}.png")

    .correspondantNumber= pcl.correspondantNumber
    .quantity
      - if (pcl.type == 'VOICE')
        - var min = Math.floor(pcl.chipCount / 60)
        - var sec = pcl.chipCount % 60
        
        = min
        |’
        = sec
        |”

      - else
        = pcl.chipCount
        | &nbsp;
        = pcl.chipType

